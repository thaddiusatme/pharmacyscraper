{
  "api_keys": {
    "google_places": "${GOOGLE_MAPS_API_KEY}",
    "perplexity": "${PERPLEXITY_API_KEY}",
    "apify": "${APIFY_API_TOKEN}"
  },
  "max_results_per_query": 25,
  "output_dir": "data/output",
  "cache_dir": "data/cache",
  "classification_cache_dir": "data/cache/classification",
  "classification_threshold": 0.6,
  "verify_places": true,
  "verification_confidence_threshold": 0.7,
  "max_budget": 50.0,
  "api_cost_limits": {
    "apify": 0.5,
    "google_places": 0.3,
    "perplexity": 0.2
  },
  "locations": [
    {
      "state": "CA",
      "cities": ["San Francisco", "Los Angeles", "San Diego"],
      "queries": [
        "independent pharmacy",
        "local pharmacy",
        "compounding pharmacy",
        "neighborhood pharmacy"
      ]
    },
    {
      "state": "NY", 
      "cities": ["New York", "Buffalo", "Rochester"],
      "queries": [
        "independent pharmacy",
        "family pharmacy",
        "community pharmacy"
      ]
    }
  ]
}
